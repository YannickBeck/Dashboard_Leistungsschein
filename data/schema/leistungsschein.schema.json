{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://local.leistungsschein/schema/leistungsschein.schema.json",
  "title": "Leistungsschein",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "id",
    "title",
    "domain",
    "theme",
    "summary",
    "mehrwert",
    "tags",
    "source",
    "estimate",
    "intro",
    "services",
    "deliverables",
    "assumptions",
    "constraints",
    "out_of_scope",
    "acceptance",
    "dependencies",
    "scope",
    "effort_drivers",
    "risks",
    "mitigations",
    "customer_responsibilities",
    "provider_responsibilities",
    "raci",
    "change_control"
  ],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "id": {
      "type": "string",
      "pattern": "^LS-[A-Za-z0-9-]+$"
    },
    "title": {
      "type": "string",
      "minLength": 3
    },
    "domain": {
      "type": "string",
      "minLength": 2
    },
    "theme": {
      "type": "string",
      "minLength": 2
    },
    "summary": {
      "type": "string",
      "minLength": 8
    },
    "mehrwert": {
      "type": "array",
      "minItems": 3,
      "maxItems": 6,
      "items": {
        "type": "string",
        "minLength": 12
      }
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 2
      }
    },
    "source": {
      "type": "object",
      "required": [
        "type",
        "origin"
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "manual",
            "generated"
          ]
        },
        "origin": {
          "type": "string",
          "minLength": 2
        },
        "url": {
          "type": "string"
        }
      }
    },
    "estimate": {
      "type": "object",
      "required": [
        "unit",
        "min",
        "likely",
        "max"
      ],
      "properties": {
        "unit": {
          "type": "string",
          "enum": [
            "PT",
            "Std"
          ]
        },
        "min": {
          "type": "number",
          "minimum": 0
        },
        "likely": {
          "type": "number",
          "minimum": 0
        },
        "max": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "intro": {
      "type": "string",
      "minLength": 10
    },
    "services": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 4
      }
    },
    "deliverables": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 4
      }
    },
    "assumptions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 4
      }
    },
    "constraints": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 4
      }
    },
    "out_of_scope": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 4
      }
    },
    "acceptance": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 4
      }
    },
    "dependencies": {
      "type": "object",
      "required": [
        "requires",
        "excludes"
      ],
      "properties": {
        "requires": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^LS-[A-Za-z0-9-]+$"
          }
        },
        "excludes": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^LS-[A-Za-z0-9-]+$"
          }
        }
      }
    },
    "scope": {
      "type": "object",
      "required": [
        "description"
      ],
      "properties": {
        "description": {
          "type": "string",
          "minLength": 10
        },
        "qty": {
          "type": "object",
          "properties": {
            "shares": {
              "type": "number",
              "minimum": 0
            },
            "tb": {
              "type": "number",
              "minimum": 0
            },
            "users": {
              "type": "number",
              "minimum": 0
            },
            "files_million": {
              "type": "number",
              "minimum": 0
            }
          }
        },
        "boundaries": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 4
          }
        }
      }
    },
    "effort_drivers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 4
      }
    },
    "risks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 4
      }
    },
    "mitigations": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 4
      }
    },
    "customer_responsibilities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 4
      }
    },
    "provider_responsibilities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 4
      }
    },
    "raci": {
      "type": "object",
      "properties": {
        "customer": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "provider": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "change_control": {
      "type": "string",
      "minLength": 8
    },
    "notes": {
      "type": "string"
    }
  }
}
